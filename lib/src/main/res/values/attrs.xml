<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CTickView">
        <attr name="ctvColor" format="color" />
        <attr name="ctvColorCircle" format="color" />
        <attr name="ctvStrokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LrcView">
        <attr name="lrcTextColor" format="color" />
        <attr name="lrcCurTextColor" format="color" />
        <attr name="lrcTimeColor" format="color" />
        <attr name="lrcTextSize" format="dimension" />
        <attr name="lrcCurTextSize" format="dimension" />
        <attr name="lrcTimeSize" format="dimension" />
        <attr name="lrcPadding" format="dimension" />
        <attr name="lrcMinScale" format="float" />
        <attr name="lrcMaxScale" format="float" />
    </declare-styleable>

    <declare-styleable name="ToggleButton">
        <attr name="tbtn_colorNormal" format="color" />
        <attr name="tbtn_colorLight" format="color" />
        <attr name="tbtn_colorPadding" format="color" />
        <attr name="tbtn_padding" format="dimension" />
        <attr name="tbtn_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="ArcMenu">
        <attr name="am_position">
            <enum name="left_top" value="0" />
            <enum name="left_bottom" value="1" />
            <enum name="right_top" value="2" />
            <enum name="right_bottom" value="3" />
        </attr>
        <attr name="am_radius" format="dimension" />
    </declare-styleable>

    <!-- 飘星自定义属性 -->
    <declare-styleable name="HeartLayout">
        <attr name="hl_initX" format="dimension" />
        <attr name="hl_initY" format="dimension" />
        <attr name="hl_xRand" format="dimension" />
        <attr name="hl_animLengthRand" format="dimension" />
        <attr name="hl_xPointFactor" format="dimension" />
        <attr name="hl_animLength" format="dimension" />
        <attr name="hl_heart_width" format="dimension" />
        <attr name="hl_heart_height" format="dimension" />
        <attr name="hl_bezierFactor" format="integer" />
        <attr name="hl_anim_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="ScrollTab">
        <attr name="stab_type">
            <enum name="trend" value="0" />
            <enum name="translation" value="1" />
            <enum name="none" value="2" />
        </attr>
        <attr name="stab_titles" format="string" />
        <attr name="stab_weight" format="dimension" />
        <attr name="stab_radius" format="dimension" />
        <attr name="stab_padding" format="dimension" />
        <attr name="stab_color" format="color" />
        <attr name="stab_duration" format="integer" />
    </declare-styleable>
</resources>